	meter_id1 {
		gpios = <13 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_ID1";
	};

	meter_adr0 {
		gpios = <14 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_ADR0";
	};

	meter_adr1 {
		gpios = <15 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_ADR1";
	};
};

&gpio2 {
	cb_rst {
		gpios = <13 GPIO_ACTIVE_LOW>;
		gpio-hog;
		output-low;
		line-name = "CB_RST";
	};

	cb_gpioa {
		gpios = <12 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "CB_GPIOA";
	};

	cb_gpiob {
		gpios = <15 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "CB_GPIOB";
	};

	cb_id0 {
		gpios = <10 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "CB_ID0";
	};

	cb_id1 {
		gpios = <11 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "CB_ID1";
	};
};

&gpio4 {
	meter_pc7 {
		gpios = <25 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_PC7";
	};

	meter_pc8 {
		gpios = <26 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_PC8";
	};

	meter_pc9 {
		gpios = <28 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_PC9";
	};

	meter_pc10 {
		gpios = <27 GPIO_ACTIVE_HIGH>;
		input;
		line-name = "METER_PC10";
	};
};

